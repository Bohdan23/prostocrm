mixin tabs(data)
    .hidden(class="pl-7.5 gap-1.25 [-webkit-overflow-scrolling:touch] [scrollbar-width:none] [-ms-overflow-style:none] [&::-webkit-scrollbar]:hidden lg:flex lg:shrink-0 lg:items-end lg:justify-start lg:w-full lg:border-b lg:border-solid lg:border-gray-500 lg:overflow-x-auto lg:mb-2.5")
        .tab.is-active.h-10.min-w-40.flex.items-center.justify-start.text-gray-150.border-t.border-r.border-l.border-solid.border-transparent.rounded-t-lg.relative.transition-colors(type="button" class="gap-1.25 px-3.75 py-2.5 cursor-pointer")
            .flex.items-center.justify-center.shrink-0.text-lg(class="w-4.5 h-4.5")
                +svg(data.icon)
            .font-semibold.text-sm!= data.tab_text
            button.flex.items-center.justify-center.text-sm.text-black-50.ml-auto(type="button" class="w-3.5 h-3.5")
                +svg('icon-close')
        .tab.h-10.min-w-40.flex.items-center.justify-start.text-gray-150.border-t.border-r.border-l.border-solid.border-transparent.rounded-t-lg.relative.transition-colors(type="button" class="gap-1.25 px-3.75 py-2.5 cursor-pointer")
            .flex.items-center.justify-center.shrink-0.text-lg(class="w-4.5 h-4.5")
                +svg('icon-book-image')
            .font-semibold.text-sm Товари
        .tab.h-10.min-w-40.flex.items-center.justify-start.text-gray-150.border-t.border-r.border-l.border-solid.border-transparent.rounded-t-lg.relative.transition-colors(type="button" class="gap-1.25 px-3.75 py-2.5 cursor-pointer")
            .flex.items-center.justify-center.shrink-0.text-lg(class="w-4.5 h-4.5")
                +svg('icon-book-image')
            .font-semibold.text-sm Товари
        button.flex.items-center.justify-center.bg-gray-700.sticky.right-0.shrink-0(type="button" class="w-7.5 h-10")
            +svg('icon-plus')
