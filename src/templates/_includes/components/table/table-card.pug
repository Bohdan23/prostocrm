					button.flex.items-center.justify-center.shrink-0.border.border-solid.border-gray-650.rounded-md.text-gray-150.font-semibold.transition-colors(type="button" class="p-1.25 gap-1.25 h-7.5 hover:bg-blue-200")
						span.flex.items-center.justify-center.w-5.h-5.text-xl.shrink-0
							+svg('icon-save')
						span.hidden(class="lg:flex") Зберегти
					button.hidden.items-center.justify-center.shrink-0.border.border-solid.border-gray-650.rounded-md.text-gray-150.font-semibold.transition-colors(type="button" class="p-1.25 gap-1.25 h-7.5 hover:bg-blue-200  lg:flex")
						span.flex.items-center.justify-center.w-5.h-5.text-xl.shrink-0
