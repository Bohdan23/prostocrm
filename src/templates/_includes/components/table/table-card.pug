mixin table-card(data)
	.flex.items-start.w-full.bg-white-50.rounded-2xl.border.border-solid.border-gray-500.overflow-hidden
		.flex.flex-col.items-start.w-full.h-full
			.flex.items-center.justify-between.w-full.border-b.border-solid.border-gray-500(class="p-2.5 gap-2.5")
				span.text-lg.font-regular.text-black-50 Замовлення #45635
				.flex.items-center.justify-start(class="gap-2.5")
					button.flex.items-center.justify-center.shrink-0.border.border-solid.border-gray-650.rounded-md.text-xl.text-gray-150.transition-colors(type="button" class="w-7.5 h-7.5 hover:bg-blue-200")
